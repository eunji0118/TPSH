<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.LoginActivity">



    <ImageView
        android:layout_width="350sp"
        android:layout_height="350sp"
        android:src="@drawable/bg_sh_logo"
        android:layout_marginTop="85dp"/>
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:textColor="@color/black"
        android:layout_marginRight="85dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="85dp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="8dp"
        android:fontFamily="@font/dangdanghae"
        android:textSize="15sp"
        android:text="로 그 인"/>
    <TextView
        android:id="@+id/tv_singup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:textColor="@color/black"
        android:layout_marginRight="85dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="85dp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="8dp"
        android:fontFamily="@font/dangdanghae"
        android:textSize="15sp"
        android:text="회 원 가 입"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="100dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_login"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="간 편 로 그 인"
            android:fontFamily="@font/dangdanghae"/>
        <ImageView
            android:id="@+id/iv_kakao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_login"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_kakako" />
        <ImageView
            android:id="@+id/iv_google"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/iv_kakao"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            android:src="@drawable/icon_google" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정이 없으신가요?  "
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#8C8888"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/dangdanghae"/>
        <TextView
            android:id="@+id/tv_geust_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv"
            android:layout_alignParentBottom="true"
            android:text="게스트로그인"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#FA0202"
            android:fontFamily="@font/dangdanghae"/>
    </RelativeLayout>



</LinearLayout>